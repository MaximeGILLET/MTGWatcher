@model MTGWatcher.Models.Card

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div class="row">
    <div class="col-lg-12">
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <hr />
    </div>
    <div class="col-lg-4">
        <img class="img-responsive" src="@Model.ImageUrl" alt="@Model.ImageUrl" />
    </div>
    <div class="col-lg-8">
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <p>@Model.Text</p>
        <p><i>"@Model.Flavor"</i></p>
        <p>artist : @Model.Artist</p>
    </div> 
    <div class="col-lg-8">
        <h4>Avergage Price : @Model.mkmProduct.priceGuide.AVG €</h4>
        <h4>Lowest Price : @Model.mkmProduct.priceGuide.LOW €</h4>
        <h4>Lowest Foil Price : @Model.mkmProduct.priceGuide.LOWFOIL €</h4>
        <h4>Price Trend : @Model.mkmProduct.priceGuide.TREND €</h4>
    </div>     
</div>
<br />
<div class="col-lg-12">
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.CardId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

